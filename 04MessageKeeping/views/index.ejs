<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create & View Tasks</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900">
   <div class="main w-full min-h-screen px-10 py-9">
      <!-- Form Section -->
      <div class="form p-10 bg-zinc-800 rounded-lg shadow-md text-white mb-10 max-w-2xl mx-auto">
          <h1 class="text-3xl font-semibold mb-6">Create a Task</h1>
          <form action="/create" method="post">
              <input class="block w-full px-5 py-3 bg-zinc-700 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" 
                     type="text" placeholder="Task Title" name="title">
              <textarea class="block w-full px-5 mt-4 py-3 bg-zinc-700 text-white rounded-md resize-none focus:outline-none focus:ring-2 focus:ring-blue-500" 
                        name="details" placeholder="Task Details"></textarea>
              <input class="mt-6 w-full cursor-pointer px-5 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-500 transition-colors duration-200" 
                     type="submit" value="Create Task">
          </form>
      </div>
      
      <!-- Task Display Section -->
      <div class="tasks p-10 text-white flex flex-wrap gap-6">
         <% if (files.length > 0) { %>
             <% files.forEach(element => { %>
              <div class="task min-w-[18rem] p-5 bg-zinc-700 rounded-md shadow-lg">
                  <h2 class="text-2xl font-bold tracking-tight"><%= element %></h2>
                  <div class="flex justify-between items-center mt-4">
                      <a class="text-blue-400 hover:underline" href="/files/<%= element %>">Read More</a>
                      <a class="text-red-500 hover:underline" href="/edit/<%= element %>">Edit Filename</a>
                  </div>
              </div>
             <% }) %>
         <% } else { %>
          <h3 class="text-zinc-400 text-xl">No tasks yet.</h3>
         <% } %>
      </div>
   </div>
</body>
</html>
